# Required for Docker so the SAM web server binds externally
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Control plane broker (SAM internal A2A)
SOLACE_BROKER_URL=ws://broker:8008
SOLACE_BROKER_USERNAME=default
SOLACE_BROKER_PASSWORD=default
SOLACE_BROKER_VPN=default

# LLM (example uses OpenAI via LiteLLM style vars used in SAM shared_config.yaml)
LLM_SERVICE_ENDPOINT=https://api.openai.com/v1
LLM_SERVICE_API_KEY=your-openai-key
LLM_SERVICE_GENERAL_MODEL_NAME=openai/gpt-4o-mini
LLM_SERVICE_PLANNING_MODEL_NAME=openai/gpt-4o

# Event Mesh Gateway data-plane broker (external topics)
INBOX_EVENT_MESH_SOLACE_BROKER_URL=ws://broker:8008
INBOX_EVENT_MESH_SOLACE_BROKER_USERNAME=default
INBOX_EVENT_MESH_SOLACE_BROKER_PASSWORD=default
INBOX_EVENT_MESH_SOLACE_BROKER_VPN=default

# Topic prefix
TOPIC_PREFIX=email
